{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
<link href="{{ asset('styles/login_style.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}

<div class="container-fluid p-0">
    <header>
        <img src="{{asset('images/headerAcceuil.jpeg')}}" alt="">
    </header>
    <div class="title-connection">
        <h2> Connection</h2>
    </div>
    {% if error %}
    <div class="col-12 text-danger error"> {{ error.messageKey | trans(error.messageData, 'security') }} </div>
    {% endif %}
    <secion class="content-body">
        <div class="content-form">

            <form class="form-group" action="{{ path('login') }}" method="post">
                <label for="username">Email:</label>
                <input class="form-control" type="text" id="username" name="_username" placeholder="your email"
                    value="{{ last_username }}" />
                <label for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="_password" placeholder="passworld" />
                <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account" /> #}

                <button class="btn btn-primary" type="submit">login</button>
            </form>
            <div class="sign-in">
